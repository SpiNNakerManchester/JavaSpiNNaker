			<version>1.4</version>
		</dependency>
		<dependency>
			<groupId>org.springframework.security</groupId>
			<artifactId>spring-security-taglibs</artifactId>
		</dependency>
	</dependencies>

	<description>A board allocation service for SpiNNaker.</description>
	<name>SpiNNaker Allocation Server</name>
</project>
