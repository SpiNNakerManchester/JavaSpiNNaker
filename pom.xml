						<goals>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.commonjava.maven.plugins</groupId>
				<artifactId>directory-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>find-root</id>
						<goals>
							<goal>highest-basedir</goal>
						</goals>
						<phase>initialize</phase>
						<configuration>
							<property>spinnaker.basedir</property>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

